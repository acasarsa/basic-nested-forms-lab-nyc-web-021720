<%# render 'form', recipe: @recipe %>

<%= form_for @recipe do |f|  %>
  Recipe Title: <%= f.text_field :title %><br>
  
  <%= f.fields_for  :ingredients do |ing| %>
    Ingredient Name: <%= ing.text_field :name %><br>
    Ingredient Quantity <%= ing.text_field :quantity %><br>
    <% end %>
<%= f.submit%>
<% end %>